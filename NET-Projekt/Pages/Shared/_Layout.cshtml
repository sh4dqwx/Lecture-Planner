<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NET_Projekt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NET_Projekt.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="d-flex justify-content-between align-items-center">
        <h2 class="m-2 ms-4">@ViewData["Title"]</h2>
        @if (!Context.Request.Path.StartsWithSegments("/Login"))
        {
            <span class="m-2 d-flex" id="profile-container">
                @if (!Context.Request.Path.StartsWithSegments("/Profile"))
                {
                    <a asp-page="Profile" class="m-2 btn btn-primary d-flex align-items-center">Profil</a>
                }
                <form method="post" asp-page-handler="Logout">
                    <button type="submit" class="m-2 btn btn-primary"><i class="m-2 fa-solid fa-right-from-bracket" title="Wyloguj się"></i></button>
                </form>
            </span>
        }
    </header>
    <main>
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>